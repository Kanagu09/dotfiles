# cd
alias "..."="cd ../.."
alias "...."="cd ../../.."
alias "....."="cd ../../../.."
alias "......"="cd ../../../../.."

alias "..2"="cd ../.."
alias "..3"="cd ../../.."
alias "..4"="cd ../../../.."
alias "..5"="cd ../../../../.."

alias "1"="cd -1"
alias "2"="cd -2"
alias "3"="cd -3"
alias "4"="cd -4"
alias "5"="cd -5"
alias "6"="cd -6"
alias "7"="cd -7"
alias "8"="cd -8"
alias "9"="cd -9"

# ls
alias "ls"="ls --color=tty -v"
alias "l"="ls -v"
alias "la"="ls -av"
alias "ll"="ls -lAhv"
alias "lla"="ls -lahv"

# git
alias "g"="git"
alias "ga"="git add"
alias "gaa"="git add --all"
alias "gb"="git branch"
alias "gc"="git commit"
alias "gcb"="git checkout -b"
alias "gcm"="git commit --message"
alias "gcl"="git clone --recurse-submodules"
alias "gco"="git checkout"
alias "gcp"="git cherry-pick"
alias "gd"="git diff"
alias "gf"="git fetch"
alias "gl"="git pull"
alias "gm"="git mv"
alias "gp"="git push"
alias "gpf"="git push --force"
alias "gps"="git push --set-upstream origin \$(git branch --show-current)"
alias "gr"="git reset --soft HEAD^"
alias "grb"="git rebase"
alias "gs"="git status"
alias "gsc"="git switch --create"
alias "gsu"="git stash -u"
alias "gsw"="git switch"
alias "gswc"="git switch --create"

# python3
alias "python"="python3"
alias "py"="python3"

# rust
alias "cb"="cargo build"
alias "cr"="cargo run"

# xdg-open
alias "o"="xdg-open ."
alias "open"="xdg-open"

# editor
alias "vi"="micro"
alias "vim"="micro"
alias "nano"="micro"

# other
alias "_"="sudo"
alias "c"="clear"
alias "e"="exit"
alias "h"="history"
alias "m"="make"
alias "q"="exit"
alias "so"="source"
alias "v"="code ."
alias "w"="which"
alias "sz"="source ~/.zshrc"
alias "sus"="systemctl suspend"
alias "reb"="reboot"
alias "sht"="shutdown now"

# color
alias "grep"="grep --color=auto"
alias "diff"="diff --color=auto"

# weather
alias "weather"="curl wttr.in"
alias "moon"="curl wttr.in/moon"

# COM.. -> COM ..
alias "cd.."="cd .."
alias "open."="xdg-open ."
alias "code."="code ."

# global
alias -g G="| grep --color=auto"
alias -g H='| head'
alias -g L='| less'
alias -g T='| tail'

# suffix
alias -s {png,jpg,jpeg,PNG,JPG,JPEG}=open
alias -s {txt,md}=open
alias -s {htm,html}=open
alias -s pdf=open
alias -s py=python3
alias -s {zip,tar.gz,lzh}=unar

# execute ls after cd
function chpwd() {
    ls
}
